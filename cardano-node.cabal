name:           cardano-node
version:        3.0.1.87
description:    The cardano full node
author:         IOHK
maintainer:     operations@iohk.io
copyright:      2019 IOHK
license:        MIT
license-file:   LICENSE
build-type:     Simple
cabal-version:  >= 1.10
extra-source-files: README.md, ChangeLog.md

library
  hs-source-dirs:      cardano-node

  exposed-modules:     Cardano.Node.CanonicalJSON
  exposed-modules:     Cardano.Node.CLI

  other-modules:       Paths_cardano_node

  build-depends:
                       base >=4.12 && <5
                     , bytestring
                     , canonical-json
                     , cborg
                     , mtl
                     , optparse-applicative
                     , time

                     , cardano-binary
                     , cardano-crypto-wrapper
                     , cardano-ledger
                     , cardano-ledger-test
                     , cardano-prelude
                     , cardano-shell
                     , ouroboros-consensus
                     , ouroboros-network

  default-language:    Haskell2010
  default-extensions:

  ghc-options:         -Weverything
                       -Wno-implicit-prelude
                       -fno-warn-safe
                       -fno-warn-unsafe
                       -fno-warn-missing-import-lists

  if os(windows)
     build-depends:    Win32
  else
     build-depends:    unix

executable cardano-node
  hs-source-dirs:      app
  main-is:             Main.hs
  default-language:    Haskell2010
  ghc-options:         -threaded
                       -Wall
                       -O2
                       "-with-rtsopts=-T"
                       -fno-warn-unticked-promoted-constructors
  other-modules:       CLI
                       GitRev
                       GitRevFromGit
                       Paths_cardano_node
                       TraceAcceptor
                       TxSubmission
                       Run
                       Topology
                       Paths_cardano_node
  build-depends:       base
                     , cardano-crypto-class
                     , cardano-crypto-wrapper
                     , cardano-ledger
                     , cardano-ledger-test
                     , cardano-node
                     , cardano-prelude
                     , cardano-shell
                     , contra-tracer
                     , io-sim-classes
                     , iohk-monitoring
                     , network-mux
                     , ouroboros-network
                     , ouroboros-consensus
                     , typed-protocols-cbor

                     , aeson
                     , async
                     , bytestring
                     , cborg
                     , containers
                     , cryptonite
                     , directory
                     , file-embed
                     , formatting
                     , iproute
                     , lens
                     , mtl
                     , network
                     , optparse-applicative
                     , process
                     , serialise
                     , safe-exceptions
                     , stm
                     , string-conv
                     , template-haskell
                     , text
                     , time
                     , typed-protocols
  if os(windows)
     build-depends:    Win32
  else
     build-depends:    unix
                     , brick
                     , vty
     other-modules:    LiveView

executable wallet-client
  hs-source-dirs:      wallet-client
  main-is:             Main.hs
  default-language:    Haskell2010
  ghc-options:         -threaded
                       -Wall
                       -O2
                       "-with-rtsopts=-T"
                       -fno-warn-unticked-promoted-constructors
  other-modules:       CLI
                       Paths_cardano_node
                       Run
                       WalletClient
  build-depends:       base
                     , cardano-ledger
                     , cardano-ledger-test
                     , cardano-node
                     , cardano-prelude
                     , cardano-shell
                     , contra-tracer
                     , io-sim-classes
                     , iohk-monitoring
                     , network-mux
                     , ouroboros-network
                     , ouroboros-consensus
                     , typed-protocols
                     , typed-protocols-cbor

                     , bytestring
                     , network
                     , optparse-applicative
                     , serialise
                     , text
  if os(windows)
     build-depends:    Win32
  else
     build-depends:    unix

executable genesis-tool
  hs-source-dirs:      app/genesis-tool
  main-is:             Main.hs
  default-language:    Haskell2010
  ghc-options:         -threaded
                       -Wall
                       -O2
                       "-with-rtsopts=-T"
                       -fno-warn-unticked-promoted-constructors
  other-modules:       CLI
                     , Run
                     , Byron.Legacy
  build-depends:       base
                     , cardano-binary
                     , cardano-crypto
                     , cardano-crypto-wrapper
                     , cardano-ledger
                     , cardano-ledger-test
                     , cardano-node
                     , cardano-prelude
                     , contra-tracer
                     , filepath
                     , iohk-monitoring
                     , pvss

                     , aeson
                     , aeson-pretty
                     , async
                     , binary
                     , bytestring
                     , canonical-json
                     , cborg
                     , containers
                     , cryptonite
                     , directory
                     , formatting
                     , lens
                     , mtl
                     , network
                     , optparse-applicative
                     , serialise
                     , stm
                     , string-conv
                     , text
                     , time
                     , typed-protocols
  if os(windows)
     build-depends:    Win32
  else
     build-depends:    unix

test-suite cardano-node-test
  hs-source-dirs:       test
  main-is:              Spec.hs
  type:                 exitcode-stdio-1.0

  other-modules:
                        Paths_cardano_node

  build-depends:
                        base >=4.12 && <5
                      , cardano-node
                      , cardano-prelude

  default-language:     Haskell2010
  default-extensions:   NoImplicitPrelude

  ghc-options:          -Weverything
                        -fno-warn-missing-import-lists
                        -fno-warn-safe
                        -fno-warn-unsafe
                        -threaded -rtsopts -with-rtsopts=-N -with-rtsopts=-T
